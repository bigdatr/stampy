{
	"source": {
    "include": [ "README.md", "src" ],
    "includePattern": ".+jsx?"
	},
	"opts": {
     "destination": "./docs/",
     "recurse": true,
     "template": "node_modules/jsdonk",
     "jsdonk": {
        "title": "Stampy",
        "output": {
          "html": true,
          "taffyjson": true,
          "heirarchyjson": true
        },
        "sections": {
          "module": {
            "function": true,
            "typedef": false
          },
          "typedef": false
        },
        "functions": {
          "prefix": true,
          "showParams": true,
          "showTypes": true,
          "expandTypes": true,
          "showOptional": true,
          "multiline": true
        }
     }
  },
  "plugins": [
     "plugins/markdown",
     "node_modules/jsdoc-babel"
  ],
  "babel": {
    "extensions": ["js", "es6", "jsx"],
    "presets": ["es2015", "stage-2", "react"],
    "plugins": ["transform-flow-strip-types"]
  }
}
