{
  "name": "stampy",
  "version": "0.13.0",
  "description": "The new and improved stampy",
  "repository": {
    "type": "git",
    "url": "git@github.com:bigdatr/stampy.git"
  },
  "license": "MIT",
  "scripts": {
    "ava": "NODE_ENV=test ava",
    "build": "rm -rf lib && yarn run css && babel src --out-dir lib --copy-files",
    "build-examples": "cd example && yarn install && yarn run build && cd -",
    "check-coverage": "NODE_ENV=test nyc check-coverage --branches 100.0  --functions 100.0 --lines 100",
    "css": "yarn run css-base-combined && yarn run css-default-combined && yarn run css-base && yarn run css-default && yarn run postcss",
    "css-base": "sh scripts/css-base.sh",
    "css-base-combined": "sh scripts/css-base-combined.sh",
    "css-default": "sh scripts/css-default.sh",
    "css-default-combined": "sh scripts/css-default-combined.sh",
    "deploy-to-gh-pages": "yarn run build && yarn run build-examples && yarn run docs && node scripts/publish.js",
    "dev": "babel src -d lib --watch",
    "docs": "jsdoc -c jsdoc.json",
    "flow": "flow check",
    "lint": "eslint src/**/*.jsx src/**/*.js",
    "lint-fix": "eslint src/**/*.jsx src/**/*.js --fix",
    "postcss": "postcss --use autoprefixer -r lib/**/*.css",
    "prepublish": "yarn run build",
    "test": "NODE_ENV=test nyc --report-dir=./coverage ava && yarn run check-coverage",
    "test-all": "NODE_ENV=test yarn run lint && yarn run flow && yarn run test"
  },
  "devDependencies": {
    "app-module-path": "^2.0.0",
    "autoprefixer": "^6.5.2",
    "ava": "^0.17.0",
    "babel-cli": "^6.5.0",
    "babel-core": "^6.5.0",
    "babel-eslint": "^6.0.2",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-polyfill": "^6.5.0",
    "babel-preset-blueflag": "^0.0.1",
    "babel-register": "^6.18.0",
    "babel-runtime": "^6.5.0",
    "cheerio": "^0.22.0",
    "enzyme": "^2.5.1",
    "eslint": "^2.7.0",
    "eslint-config-blueflag": "^0.2.0",
    "flow-bin": "^0.39.0",
    "gh-pages": "^0.11.0",
    "git-url-parse": "^6.0.1",
    "jsdoc": "^3.4.2",
    "jsdoc-babel": "^0.2.1",
    "jsdoc-react-proptypes": "^1.0.1",
    "jsdom": "^9.8.3",
    "jsdonk": "0.4.12",
    "node-sass": "^3.11.2",
    "nyc": "^10.0.0",
    "postcss-cli": "^2.6.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.0.0",
    "react-dom": "^15.3.2",
    "sinon": "^1.17.6"
  },
  "peerDependencies": {
    "react": "^15.x.x"
  },
  "dependencies": {
    "bruce": "^0.9.0",
    "classnames": "^2.2.5",
    "element-resize-detector": "^1.1.9",
    "immutable": "^3.8.1",
    "proxyquire": "^1.7.11",
    "react-immutable-proptypes": "^2.1.0",
    "react-select": "^1.0.0-rc.2"
  },
  "main": "lib/index.js",
  "engines": {
    "npm": "^3.0.0"
  },
  "ava": {
    "require": "babel-register",
    "babel": {
      "presets": [
        "blueflag"
      ],
      "plugins": [
        "istanbul"
      ],
      "sourceMaps": "inline"
    },
    "files": [
      "src/**/*-test.js"
    ]
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/**/*-test.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "require": [
      "babel-register"
    ]
  }
}
